# -- Changing Window Focus --
# change window focus within space
alt - j : yabai -m window --focus south
alt - k : yabai -m window --focus north
# alt - h : yabai -m window --focus west

# Focus West or Jump to Left Monitor
alt - h : /bin/bash -c 'if ! yabai -m window --focus west; then yabai -m display --focus prev; fi'
# alt - l : yabai -m window --focus east

alt - l : /bin/bash -c 'if ! yabai -m window --focus east; then yabai -m display --focus next; fi'

#change focus between external displays (left and right)
# alt - i: yabai -m display --focus west
# alt - o: yabai -m display --focus east

# -- Modifying the Layout --

# rotate layout clockwise
shift + alt - r : yabai -m space --rotate 270

# flip along y-axis
shift + alt - y : yabai -m space --mirror y-axis

# flip along x-axis
shift + alt - x : yabai -m space --mirror x-axis

# toggle window float
shift + alt - t : yabai -m window --toggle float --grid 4:4:1:1:2:2


# -- Modifying Window Size --

# maximize a window
shift + alt - m : yabai -m window --toggle zoom-fullscreen

# balance out tree of windows (resize to occupy same area)
shift + alt - e : yabai -m space --balance

# -- Moving Windows Around --

# swap windows
# shift + alt - n : yabai -m window --swap south
# shift + alt - p : yabai -m window --swap north
shift + alt - p : yabai -m window --swap west
shift + alt - n : yabai -m window --swap east

# move window and split
# ctrl + alt - j : yabai -m window --warp south
# ctrl + alt - k : yabai -m window --warp north
# shift + alt - n : yabai -m window --warp west
# shift + alt - p : yabai -m window --warp east

# move window to display left and right
shift + alt - i : yabai -m window --display west; yabai -m display --focus west;
shift + alt - o : yabai -m window --display east; yabai -m display --focus east;


# move window to prev and next space
# shift + alt - p : yabai -m window --space prev;
# shift + alt - n : yabai -m window --space next;

# move window to space #
shift + alt - 1 : yabai -m window --space 1;
shift + alt - 2 : yabai -m window --space 2;
shift + alt - 3 : yabai -m window --space 3;
shift + alt - 4 : yabai -m window --space 4;
shift + alt - 5 : yabai -m window --space 5;
shift + alt - 6 : yabai -m window --space 6;
shift + alt - 7 : yabai -m window --space 7;

# -- Starting/Stopping/Restarting Yabai --

# stop/start/restart yabai
ctrl + alt - q : brew services stop yabai
ctrl + alt - s : brew services start yabai
ctrl + alt - r : brew services restart yabai
# RESIZE WINDOWS
#
shift + alt - h : yabai -m window west --resize right:-60:0 2> /dev/null || yabai -m window --resize right:-60:0
# shift + alt - l : yabai -m window north --resize bottom:0:20 2> /dev/null || yabai -m window --resize bottom:0:20
# ctrl + cmd - k : yabai -m window south --resize top:0:-20 2> /dev/null || yabai -m window --resize top:0:-20
shift + alt - l : yabai -m window east --resize left:60:0 2> /dev/null || yabai -m window --resize left:60:0
#To reload after change:     skhd --reload

alt - n: /bin/bash -c 'sleep 0.05 && open -na Alacritty'
